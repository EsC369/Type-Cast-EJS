                        <button style="margin-bottom:20px;font-size:15px;" class="btn btn-lg btn-primary btn-block" type="submit">Login With Email</button>
            
                        <div style="padding-right:auto">
                            <a style="margin-bottom:10px;color:white;" class="btn-lg btn-secondary btn-block">
                                <i class="fa fa-facebook visible-xs"></i>
                                <span class="hidden-xs" style="font-size:15px;">Login With Facebook</span>
                            </a>
                        </div>
                    </form>
                </div>
